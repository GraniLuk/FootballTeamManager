<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - FootballManager</title>
	<link rel="stylesheet" href="~/css/normalizer.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	<meta name="description" content="Your project description" />
	<!-- Title -->
	<meta property="og:title" content="BQS Football Manager" />
	<!-- OPTIONAL description. 2-4 sentences. -->
	<meta property="og:site_name" content="Site to manage our football games" />
	<!-- full url with http(s) ie. https://maciejkorsan.github.io/my-repo/ -->
	<meta property="og:url" content="https://bqsfootballmanager.azurewebsites.net/" />
	<!-- full url to the image with http(s) ie. https://maciejkorsan.github.io/my-repo/assets/img/fb.png. Facebook suggests at least 1200 x 630. -->
	<meta property="og:image"
		  content="https://bqsfootballmanager.azurewebsites.net/images/footballteam.jpg" />
</head>
<body>
    <header>
        <nav class="navbar navbar-brand-my navbar-expand-sm">
                <div class="navbar__links container flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link text-light" asp-area="" asp-controller="Fixture" asp-action="Index">Terminarz</a>
                            </li>
						<li class="nav-item">
							<a class="nav-link text-light" asp-area="" asp-controller="Ranking" asp-action="Index">Ranking</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-light" asp-area="" asp-controller="Draw" asp-action="Index">Losowanie</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-light" asp-area="" asp-controller="Player" asp-action="Index">Spis graczy</a>
						</li>
					</ul>
                </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - FootballManager - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
