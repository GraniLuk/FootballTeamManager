@using System.Web.Configuration
@*@model IEnumerable<FootballTeamManager.Models.Draw>*@
@{
    ViewBag.Title = "Losowanie";
}

@*<img src="~/Content/themes/base/images/team.png" />*@



@{  var imagePath = "";
    WebImage WatermarkPhoto = new WebImage(@"~\" +
         @"\Content/themes/base/images/podpis.png");
    WebImage photo = new WebImage(@"~/Content/themes/base/images/team.png");
    if (photo != null)
    {
        imagePath = @"Content/themes/base/images/team.png";
        photo.AddImageWatermark(WatermarkPhoto, width: 80, height: 20,
           horizontalAlign: "Center", verticalAlign: "Bottom",
           opacity: 100, padding: 10);
        photo.Save(@"~\" + imagePath);
    }
}
<!DOCTYPE html>
<html>
<head>
    <title>Losowanie</title>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
</head>
<body>
    <h1>Skład</h1>
    @if (imagePath != "")
    {
        <div class="result">
            <img src="@imagePath" alt="Image" />
        </div>
    }
</body>
</html>



